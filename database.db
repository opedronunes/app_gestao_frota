CREATE TABLE tb_usuario(
id_usuario INT NOT NULL AUTO_INCREMENT,
no_usuario VARCHAR(200) NOT NULL,
nu_cpf_usuario VARCHAR(11) NOT NULL,
email_usuario VARCHAR(200) NOT NULL,
senha_usuario VARCHAR(200),
dt_cadastro DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
id_perfil INT,
id_status INT,
CONSTRAINT fk_perfil_usuario FOREIGN KEY(id_perfil)
	REFERENCES tb_perfil(id_perfil),
CONSTRAINT fk_status_usuario FOREIGN KEY(id_status)
	REFERENCES tb_status(id_status),
UNIQUE KEY(nu_cpf_usuario),
PRIMARY KEY(id_usuario)
);

CREATE TABLE tb_perfil(
id_perfil INT NOT NULL AUTO_INCREMENT,
no_perfil VARCHAR(100),
PRIMARY KEY(id_perfil)
);

CREATE TABLE tb_status(
id_status INT NOT NULL AUTO_INCREMENT,
no_status VARCHAR(50),
PRIMARY KEY(id_status)
);

CREATE TABLE `tb_colaborador` (
  `id_colaborador` int NOT NULL AUTO_INCREMENT,
  `nu_cpf_colaborador` varchar(11) NOT NULL,
  `no_colaborador` varchar(150) NOT NULL,
  `dt_nascimento` date NOT NULL,
  `dt_admissao` date NOT NULL,
  `no_funcao` varchar(100) DEFAULT NULL,
  `vl_salario` decimal(6,2) DEFAULT NULL,
  `dt_cadastro` DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `id_status` INT,
  CONSTRAINT fk_status_colaborador FOREIGN KEY(id_status)
	REFERENCES tb_status(id_status),
  PRIMARY KEY (`id_colaborador`),
  UNIQUE KEY `nu_cpf` (`nu_cpf_colaborador`)
);